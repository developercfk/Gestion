<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gestionventas?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">0123456789</property>
    <mapping resource="com/developercfk/pojo/Venta.hbm.xml"/>
    <mapping resource="com/developercfk/pojo/Administrador.hbm.xml"/>
    <mapping resource="com/developercfk/pojo/Producto.hbm.xml"/>
    <mapping resource="com/developercfk/pojo/Cajero.hbm.xml"/>
    <mapping resource="com/developercfk/pojo/Empleado.hbm.xml"/>
    <mapping resource="com/developercfk/pojo/Ventayproducto.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
